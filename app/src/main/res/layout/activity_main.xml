<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#b1faeb">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="24dp">

            <!-- Welcome Text -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to MathBuddies!"
                android:textSize="32sp"
                android:textAlignment="center"
                android:textColor="#1B2B48"
                android:shadowColor="#90FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:layout_marginBottom="24dp"/>

            <!-- App Icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="45dp"
                android:src="@drawable/mathbuddies_latest"
                android:contentDescription="MathBuddies Icon" />

            <!-- Compare Button -->
            <Button
                android:id="@+id/compareNumbers"
                style="@style/ChewyTextStyle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="ðŸ”¢ Compare Numbers"
                android:backgroundTint="#fdc235"
                android:textColor="#000000"
                android:elevation="8dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textSize="18sp"/>

            <!-- Order Button -->
            <Button
                android:id="@+id/orderNumbers"
                style="@style/ChewyTextStyle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Arrange Numbers"
                android:backgroundTint="#fdc235"
                android:textColor="#000000"
                android:elevation="8dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="30sp"
                android:paddingRight="32dp"
                android:textSize="18sp"/>

            <!-- Compose Button -->
            <Button
                android:id="@+id/composeNumbers"
                style="@style/ChewyTextStyle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="ðŸ§® Compose Numbers"
                android:backgroundTint="#fdc235"
                android:textColor="#000000"
                android:elevation="8dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textSize="18sp"/>
        </LinearLayout>
    </FrameLayout>
</ScrollView>

