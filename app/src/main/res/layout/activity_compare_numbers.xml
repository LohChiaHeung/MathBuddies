<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF">

    <!-- ðŸ”™ Back Button -->
    <Button
        style="@style/ChewyTextStyle"
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:padding="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ§® Score -->
    <TextView
        style="@style/ChewyTextStyle"
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”‡ Mute Button (below score) -->
    <Button
        style="@style/ChewyTextStyle"
        android:id="@+id/btnMute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ðŸ”Š"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtScore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- ðŸ§¾ Scrollable content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnMute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            style="@style/ChewyTextStyle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:minHeight="330dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_vertical">

            <!-- Level Name -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtLevelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: "
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <!-- Question Counter -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1: Compare Numbers"
                android:textColor="#333333"
                android:textSize="35sp"
                android:layout_marginBottom="16dp" />

            <!-- Problem -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 ___ 89"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Option Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginTop="16dp">

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Less"
                    android:layout_marginEnd="8dp"
                    android:textSize="28sp" />

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Equal"
                    android:textSize="28sp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnOption3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="More"
                    android:textSize="28sp" />
            </LinearLayout>

            <!-- Feedback -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp"
                android:textColor="#008000"
                android:layout_marginTop="32dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
