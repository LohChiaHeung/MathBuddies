<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1faeb">

    <!-- ðŸ”™ Back Button (Top-Left) -->
    <Button
        style="@style/ChewyTextStyle"
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ§® Score Text (Top-Right) -->
    <TextView
        style="@style/ChewyTextStyle"
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ”‡ Mute Button (below Score) -->
    <Button
        style="@style/ChewyTextStyle"
        android:id="@+id/btnMute"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:text="ðŸ”Š"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#734012"
        android:padding="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtScore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp" />

    <!-- ðŸ“œ Scrollable Game Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnMute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            style="@style/ChewyTextStyle"
            android:id="@+id/centerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:padding="16dp"
            android:paddingTop="100dp"
            >

            <!-- Level, Question Info -->

            <TextView
                android:id="@+id/txtLevel"
                style="@style/ChewyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:shadowColor="#90FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="Level 1"
                android:textAlignment="center"
                android:textColor="#1B2B48"
                android:textSize="46sp" />

            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtQuestionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1 of 5"
                android:textColor="#85685B"
                android:textSize="35sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtOrderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ascending Order (Small âžœ Big)"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Draggable Numbers -->
            <LinearLayout
                style="@style/ChewyTextStyle"
                android:id="@+id/dragContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Drop Zones -->
            <LinearLayout
                style="@style/ChewyTextStyle"
                android:id="@+id/dropContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Buttons Row: Reset + Check -->
            <LinearLayout
                style="@style/ChewyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†©ï¸ Reset"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/textColor"
                    android:backgroundTint="#fdc235" />

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ”ï¸ Check Answer"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/textColor"
                    android:backgroundTint="#fdc235"/>
            </LinearLayout>

            <!-- Feedback Text -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp"
                android:textColor="#008000"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
