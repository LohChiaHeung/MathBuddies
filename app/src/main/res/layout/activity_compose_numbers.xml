<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF">

    <!-- 🔙 Back Button (Top-Left) -->
    <Button
        style="@style/ChewyTextStyle"
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 🧮 Score Text (Top-Right) -->
    <TextView
        style="@style/ChewyTextStyle"
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 🔇 Mute Button (below Score) -->
    <Button
        style="@style/ChewyTextStyle"
        android:id="@+id/btnMute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="🔊"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtScore"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- 📜 Scrollable Game Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:minHeight="600dp"
        app:layout_constraintTop_toBottomOf="@id/btnMute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            style="@style/ChewyTextStyle"
            android:id="@+id/centerContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_vertical">

            <!-- Level Info -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textSize="42sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <!-- Target Number -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtTargetNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make: 15"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginBottom="15dp" />

            <!-- Blank Container -->
            <LinearLayout
                android:id="@+id/blankContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Number Buttons -->
            <!-- 🔢 Number Buttons (auto-layout for portrait & landscape) -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/numRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/numRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Check Button -->
            <LinearLayout
                style="@style/ChewyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↩️ Reset"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp" />

                <Button
                    style="@style/ChewyTextStyle"
                    android:id="@+id/btnCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ Check Answer"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Feedback -->
            <TextView
                style="@style/ChewyTextStyle"
                android:id="@+id/txtFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp"
                android:textColor="#008000"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
