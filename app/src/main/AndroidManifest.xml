    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IndividualPracticalAssignment"
        tools:targetApi="31">
        <activity
            android:name=".BaseActivity"/>
        <activity
            android:name=".TutorialActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".TutorialActivityOrderNumber"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".TutorialActivityComposeNumber"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".CompareNumbersActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".CompareLevelsActivity"
            android:exported="false" />
        <activity
            android:name=".OrderNumbersActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".OrderLevelsActivity"
            android:exported="false" />
        <activity
            android:name=".ComposeNumbersActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".ComposeLevelsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>